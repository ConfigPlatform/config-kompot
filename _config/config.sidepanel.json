{
  "sidepanels": [
    {
      "id": "create_product",
      "width": "30%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Product"
        },
        {
          "type": "column",
          "content": [
            {
              "type": "form",
              "className": "space-y-3",
              "id": "product_create_form",
              "fields": [
                {
                  "name": "price",
                  "label": "Price",
                  "type": "number",
                  "required": true,
                  "defaultValue": 100,
                  "className": "py-2 px-2 block w-full border border-gray-200 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                },
                {
                  "name": "name",
                  "label": "Name",
                  "type": "text",
                  "required": true,
                  "className": "py-2 px-2 block w-full border border-gray-200 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                },
                {
                  "name": "description",
                  "label": "Description",
                  "type": "text",
                  "required": true,
                  "className": "py-2 px-2 block w-full border border-gray-200 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "text": "Submit",
                  "serverHandler": "product_create_sidepanel_submit"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "variant": "secondary",
                  "serverHandler": "close_product_create_sidepanel"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "create_invoice",
      "width": "30%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Invoice"
        },
        {
          "type": "column",
          "content": [
            {
              "type": "form",
              "className": "space-y-3",
              "id": "invoice_create_form",
              "fields": [
                {
                  "name": "product",
                  "label": "Product",
                  "type": "text",
                  "required": true,
                  "className": "py-2 px-2 block w-full border border-gray-200 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                },
                {
                  "name": "client",
                  "label": "Client",
                  "type": "text",
                  "required": true,
                  "className": "py-2 px-2 block w-full border border-gray-200 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "htmlType": "submit",
                  "text": "Submit",
                  "serverHandler": "invoice_create_sidepanel_submit"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "variant": "secondary",
                  "serverHandler": "close_invoice_create_sidepanel"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "create_client",
      "width": "30%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Client"
        },
        {
          "type": "column",
          "content": [
            {
              "type": "form",
              "className": "space-y-3",
              "id": "client_create_form",
              "fields": [
                {
                  "name": "firstName",
                  "label": "First Name",
                  "type": "text",
                  "required": true,
                  "className": "py-2 px-2 block w-full border border-gray-200 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                },
                {
                  "name": "lastName",
                  "label": "Last Name",
                  "type": "text",
                  "required": true,
                  "className": "py-2 px-2 block w-full border border-gray-200 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                },
                {
                  "name": "phone",
                  "label": "Phone",
                  "type": "text",
                  "required": true,
                  "pattern": "^\\d{3}-\\d{3}-\\d{4}$",
                  "className": "py-2 px-2 block w-full border border-gray-200 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "text": "Submit",
                  "serverHandler": "client_create_sidepanel_submit"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "variant": "secondary",
                  "serverHandler": "close_client_create_sidepanel"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}