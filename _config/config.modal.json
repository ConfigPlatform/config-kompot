{
  "modals": [
    {
      "id": "create_client",
      "width": "30%",
      "placement": "top-right",
      "content": [
        {
          "type": "text",
          "value": "Create Client"
        },
        {
          "type": "container",
          "className": "col-span-6",
          "content": [
            {
              "type": "form",
              "className": "space-y-3",
              "id": "client_create_form",
              "fields": [
                {
                  "name": "firstName",
                  "label": "First Name",
                  "type": "text",
                  "required": true,
                  "pattern": "^[a-zA-Z]+$"
                },
                {
                  "name": "lastName",
                  "label": "Last Name",
                  "type": "text",
                  "required": true,
                  "pattern": "^[a-zA-Z]+$"
                },
                {
                  "name": "phone",
                  "label": "Phone",
                  "type": "text",
                  "required": true,
                  "pattern": "^\\d{3}-\\d{3}-\\d{4}$"
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "htmlType": "submit",
                  "text": "Submit",
                  "serverHandler": "client_create_modal_submit"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "serverHandler": "close_client_create_modal"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}