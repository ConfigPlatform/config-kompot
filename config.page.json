{
  "pages": [
    {
      "path": "/invoice",
      "content": [
        {
          "type": "text",
          "value": "Invoices",
          "className": "text-3xl text-gray-900 font-medium mb-4"
        },
        {
          "type": "button",
          "text": "Add Invoice",
          "serverHandler": "open_invoice_create_sidepanel"
        },
        {
          "type": "table",
          "select": "invoice_search",
          "columns": [
            {
              "name": "ID",
              "content": [
                {
                  "type": "text",
                  "value": "$id",
                  "vars": {
                    "id": "$id"
                  }
                }
              ]
            },
            {
              "name": "Amount",
              "content": [
                {
                  "type": "text",
                  "value": "$$amount",
                  "vars": {
                    "amount": "$amount"
                  }
                }
              ]
            },
            {
              "name": "Status",
              "content": [
                {
                  "type": "text",
                  "value": "$status",
                  "vars": {
                    "status": "$status"
                  }
                }
              ]
            },
            {
              "name": "Client",
              "content": [
                {
                  "type": "text",
                  "value": "$name",
                  "vars": {
                    "client.name": "$name"
                  }
                }
              ]
            },
            {
              "name": "Controls",
              "content": [
                {
                  "type": "dropdown",
                  "iconRight": "<svg class=\"w-5 h-full\" aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" fill=\"currentColor\" viewBox=\"0 0 16 3\">\n    <path d=\"M2 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm6.041 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM14 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Z\"/>\n  </svg>",
                  "action": "click",
                  "content": [
                    {
                      "type": "button",
                      "text": "Edit",
                      "className": "w-full mx-0"
                    },
                    {
                      "type": "button",
                      "data": {
                        "id": "$id"
                      },
                      "serverHandler": "client_delete_one",
                      "text": "Delete",
                      "variant": "danger",
                      "className": "w-full mx-0"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "pagination",
          "select": "invoice_search",
          "className": "flex justify-center"
        }
      ]
    },
    {
      "path": "/client",
      "content": [
        {
          "type": "text",
          "value": "Clients",
          "className": "text-3xl text-gray-900 font-medium mb-4"
        },
        {
          "type": "row",
          "content": [
            {
              "type": "col",
              "width": "6",
              "content": [
                {
                  "type": "filter",
                  "placeholder": "Name",
                  "filterBy": "name",
                  "select": "client_search"
                },
                {
                  "type": "filter",
                  "placeholder": "Email",
                  "filterBy": "email",
                  "select": "client_search"
                },
                {
                  "type": "filter",
                  "placeholder": "Phone",
                  "filterBy": "phone",
                  "select": "client_search"
                },
                {
                  "type": "button",
                  "variant": "secondary",
                  "text": "Reset filters",
                  "serverHandler": "open_client_create_sidepanel"
                }
              ]
            },
            {
              "type": "col",
              "width": "6",
              "className": "flex justify-end",
              "content": [
                {
                  "type": "button",
                  "text": "Add Client",
                  "serverHandler": "open_client_create_sidepanel"
                }
              ]
            }
          ]
        },
        {
          "type": "table",
          "select": "client_search",
          "columns": [
            {
              "name": "ID",
              "sortBy": "id",
              "content": [
                {
                  "type": "text",
                  "value": "$id",
                  "vars": {
                    "id": "$id"
                  }
                }
              ]
            },
            {
              "name": "Name",
              "content": [
                {
                  "type": "link",
                  "className": "",
                  "href": "/client/$id",
                  "text": "$name",
                  "vars": {
                    "id": "$id",
                    "name": "$name"
                  }
                }
              ]
            },
            {
              "name": "Email",
              "content": [
                {
                  "type": "text",
                  "value": "$email",
                  "vars": {
                    "email": "$email"
                  }
                }
              ]
            },
            {
              "name": "Phone",
              "content": [
                {
                  "type": "text",
                  "value": "$phone",
                  "vars": {
                    "phone": "$phone"
                  }
                }
              ]
            },
            {
              "name": "Lead Source",
              "content": [
                {
                  "type": "text",
                  "value": "$leadSource",
                  "vars": {
                    "leadSource": "$leadSource"
                  }
                }
              ]
            },
            {
              "name": "Lead Status",
              "content": [
                {
                  "type": "text",
                  "value": "$leadStatus",
                  "vars": {
                    "leadStatus": "$leadStatus"
                  }
                }
              ]
            },
            {
              "name": "Controls",
              "content": [
                {
                  "type": "dropdown",
                  "iconRight": "<svg class=\"w-5 h-full\" aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" fill=\"currentColor\" viewBox=\"0 0 16 3\">\n    <path d=\"M2 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm6.041 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM14 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Z\"/>\n  </svg>",
                  "action": "click",
                  "content": [
                    {
                      "type": "button",
                      "text": "Edit",
                      "className": "w-full mx-0"
                    },
                    {
                      "type": "button",
                      "data": {
                        "id": "$id"
                      },
                      "serverHandler": "client_delete_one",
                      "text": "Delete",
                      "variant": "danger",
                      "className": "w-full mx-0"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "pagination",
          "select": "client_search",
          "className": "flex justify-center"
        }
      ]
    },
    {
      "path": "/client/:id",
      "content": [
        {
          "type": "dataContext",
          "select": "client_get_by_id",
          "content": [
            {
              "type": "row",
              "content": [
                {
                  "type": "col",
                  "width": 1,
                  "content": [
                    {
                      "type": "text",
                      "value": "$name",
                      "className": "text-3xl font-medium block",
                      "vars": {
                        "name": "$name"
                      }
                    },
                    {
                      "type": "text",
                      "value": "Name:",
                      "className": "font-medium block"
                    },
                    {
                      "type": "text",
                      "value": "Email:",
                      "className": "font-medium block"
                    },
                    {
                      "type": "text",
                      "value": "Phone:",
                      "className": "font-medium block"
                    }
                  ]
                },
                {
                  "type": "col",
                  "width": 5,
                  "content": [
                    {
                      "type": "text",
                      "value": "$email",
                      "className": "block",
                      "vars": {
                        "email": "$email"
                      }
                    },
                    {
                      "type": "text",
                      "value": "$phone",
                      "className": "block",
                      "vars": {
                        "phone": "$phone"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "col",
              "width": 6,
              "className": "my-4",
              "content": [
                {
                  "type": "text",
                  "value": "Invoices",
                  "className": "block font-medium text-xl"
                },
                {
                  "type": "table",
                  "select": "invoice_get_by_client",
                  "columns": [
                    {
                      "name": "ID",
                      "content": [
                        {
                          "type": "text",
                          "value": "$id",
                          "vars": {
                            "id": "$id"
                          }
                        }
                      ]
                    },
                    {
                      "name": "Amount",
                      "content": [
                        {
                          "type": "text",
                          "value": "$$amount",
                          "vars": {
                            "amount": "$amount"
                          }
                        }
                      ]
                    },
                    {
                      "name": "Paid",
                      "content": [
                        {
                          "type": "text",
                          "value": "$$paid",
                          "vars": {
                            "paymentSum": "$paid"
                          }
                        }
                      ]
                    },
                    {
                      "name": "Status",
                      "content": [
                        {
                          "type": "text",
                          "value": "$status",
                          "vars": {
                            "status": "$status"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "col",
              "width": 6,
              "className": "my-4",
              "content": [
                {
                  "type": "text",
                  "value": "Payments",
                  "className": "block font-medium text-xl"
                },
                {
                  "type": "table",
                  "select": "payment_get_by_client",
                  "columns": [
                    {
                      "name": "ID",
                      "content": [
                        {
                          "type": "text",
                          "value": "$id",
                          "vars": {
                            "id": "$id"
                          }
                        }
                      ]
                    },
                    {
                      "name": "Amount",
                      "content": [
                        {
                          "type": "text",
                          "value": "$$amount",
                          "vars": {
                            "amount": "$amount"
                          }
                        }
                      ]
                    },
                    {
                      "name": "Invoice",
                      "content": [
                        {
                          "type": "text",
                          "value": "#$id",
                          "vars": {
                            "id": "$id"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "path": "/payment",
      "content": [
        {
          "type": "text",
          "value": "Payments",
          "className": "text-3xl text-gray-900 font-medium mb-4"
        },
        {
          "type": "button",
          "text": "Add Payment",
          "serverHandler": "payment_create_sidepanel_open"
        },
        {
          "type": "table",
          "select": "payment_search",
          "columns": [
            {
              "name": "ID",
              "content": [
                {
                  "type": "text",
                  "value": "$id",
                  "vars": {
                    "id": "$id"
                  }
                }
              ]
            },
            {
              "name": "Amount",
              "content": [
                {
                  "type": "text",
                  "value": "$$amount",
                  "vars": {
                    "amount": "$amount"
                  }
                }
              ]
            },
            {
              "name": "Invoice",
              "content": [
                {
                  "type": "text",
                  "value": "#$id",
                  "vars": {
                    "invoice.id": "$id"
                  }
                }
              ]
            },
            {
              "name": "Client",
              "content": [
                {
                  "type": "text",
                  "value": "$name",
                  "vars": {
                    "client.name": "$name"
                  }
                }
              ]
            },
            {
              "name": "Controls",
              "content": [
                {
                  "type": "dropdown",
                  "iconRight": "<svg class=\"w-5 h-full\" aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" fill=\"currentColor\" viewBox=\"0 0 16 3\">\n    <path d=\"M2 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm6.041 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM14 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Z\"/>\n  </svg>",
                  "action": "click",
                  "content": [
                    {
                      "type": "button",
                      "text": "Edit",
                      "className": "w-full mx-0"
                    },
                    {
                      "type": "button",
                      "data": {
                        "id": "$id"
                      },
                      "serverHandler": "client_delete_one",
                      "text": "Delete",
                      "variant": "danger",
                      "className": "w-full mx-0"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "pagination",
          "select": "payment_search",
          "className": "flex justify-center"
        }
      ]
    },
    {
      "path": "/",
      "content": [
        {
          "type": "text",
          "value": "The perfect CRM platform to grow your business.",
          "className": "text-4xl text-gray-900 font-medium pt-10"
        },
        {
          "type": "text",
          "value": "Finance, schedule, inventory, client management, telephony calls and messages, planning and more. All in one.",
          "className": "text-2xl text-gray-700 font-small pt-12"
        },
        {
          "type": "button",
          "text": "Try for free"
        }
      ]
    }
  ]
}
