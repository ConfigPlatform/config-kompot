{
  "sidepanels": [
    {
      "id": "create_product",
      "width": "25%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Product",
          "className": "text-xl text-gray-900 font-medium"
        },
        {
          "type": "col",
          "className": "mt-2",
          "content": [
            {
              "type": "form",
              "fields": [
                {
                  "name": "price",
                  "label": "Price",
                  "type": "number",
                  "required": true,
                  "defaultValue": 100,
                  "className": "w-full"
                },
                {
                  "name": "name",
                  "label": "Name",
                  "type": "text",
                  "required": true,
                  "className": "w-full"
                },
                {
                  "name": "description",
                  "label": "Description",
                  "type": "text",
                  "required": true,
                  "className": "w-full"
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "text": "Submit",
                  "htmlType": "submit",
                  "serverHandler": "product_create_sidepanel_submit",
                  "className": "ms-0"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "variant": "secondary",
                  "serverHandler": "close_product_create_sidepanel"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "create_invoice",
      "width": "25%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Invoice",
          "className": "text-xl text-gray-900 font-medium"
        },
        {
          "type": "col",
          "className": "mt-2",
          "content": [
            {
              "type": "dataContext",
              "select": "invoice_create_default_values",
              "content": [
                {
                  "type": "form",
                  "fields": [
                    {
                      "name": "amount",
                      "label": "Amount",
                      "type": "number",
                      "required": true,
                      "className": "w-full"
                    },
                    {
                      "name": "client",
                      "label": "Client",
                      "type": "select",
                      "required": true,
                      "className": "w-full",
                      "options": "$clients"
                    }
                  ],
                  "actions": [
                    {
                      "type": "button",
                      "htmlType": "submit",
                      "text": "Submit",
                      "serverHandler": "invoice_create_sidepanel_submit",
                      "className": "ms-0"
                    },
                    {
                      "type": "button",
                      "text": "Cancel",
                      "variant": "secondary",
                      "serverHandler": "close_invoice_create_sidepanel"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "create_payment",
      "width": "25%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Payment",
          "className": "text-xl text-gray-900 font-medium"
        },
        {
          "type": "col",
          "className": "mt-2",
          "content": [
            {
              "type": "dataContext",
              "select": "payment_create_default_values",
              "content": [
                {
                  "type": "form",
                  "fields": [
                    {
                      "name": "amount",
                      "label": "Amount",
                      "type": "number",
                      "required": true,
                      "className": "w-full"
                    },
                    {
                      "name": "invoice",
                      "label": "Invoice",
                      "type": "select",
                      "required": true,
                      "className": "w-full",
                      "options": "$invoices"
                    }
                  ],
                  "actions": [
                    {
                      "type": "button",
                      "htmlType": "submit",
                      "text": "Submit",
                      "serverHandler": "payment_create_sidepanel_submit",
                      "className": "ms-0"
                    },
                    {
                      "type": "button",
                      "text": "Cancel",
                      "variant": "secondary",
                      "serverHandler": "payment_create_sidepanel_close"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "create_client",
      "width": "25%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Client",
          "className": "text-xl text-gray-900 font-medium"
        },
        {
          "type": "col",
          "className": "mt-2",
          "content": [
            {
              "type": "form",
              "fields": [
                {
                  "name": "name",
                  "label": "Name",
                  "type": "text",
                  "required": true
                },
                {
                  "name": "email",
                  "label": "Email",
                  "type": "text",
                  "required": true
                },
                {
                  "name": "phone",
                  "label": "Phone",
                  "type": "text",
                  "required": true
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "text": "Submit",
                  "htmlType": "submit",
                  "serverHandler": "client_create_sidepanel_submit",
                  "className": "ms-0"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "variant": "secondary",
                  "serverHandler": "close_client_create_sidepanel"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
