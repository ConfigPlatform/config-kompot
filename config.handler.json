    {
      "name": "client_search",
      "actions": [
        {
          "type": "VARIABLE_DEFINE",
          "name": "clientsGetRes",
          "value": null
        },
        {
          "type": "VARIABLE_DEFINE",
          "name": "filterCondition",
          "value": "client.name ~* :name AND client.email ~* :email AND client.phone ~* :phone AND client.leadStatus ~* :leadStatus"
        },
        {
          "type": "CONDITION",
          "condition": "data.filters && data.sorting",
          "onMatch": [
            {
              "type": "TABLE_DATA_SELECT",
              "select": "client",
              "from": {
                "table": "client"
              },
              "where": {
                "condition": "{{ filterCondition }}",
                "data": {
                  "name": ".*{{ data.filters.name || '' }}.*",
                  "email": ".*{{ data.filters.email || '' }}.*",
                  "phone": ".*{{ data.filters.phone || '' }}.*",
                  "leadStatus": ".*{{ data.filters.leadStatus || '' }}.*"
                }
              },
              "orderBy": {
                "client.id": "{{ data.sorting.id }}"
              },
              "itemsPerPage": 10,
              "getManyAndCount": true,
              "awaitResult": true,
              "assignToVar": "clientsGetRes"
            },
            {
              "type": "RETURN",
              "data": {
                "items": "{{ clientsGetRes[0] }}",
                "totalCount": "{{ clientsGetRes[1] }}",
                "pagination": {
                  "itemsPerPage": 10
                }
              },
              "config": null
            }
          ],
          "onNotMatch": []
        },
        {
          "type": "CONDITION",
          "condition": "!data.filters && !data.sorting",
          "onMatch": [
            {
              "type": "TABLE_DATA_SELECT",
              "select": "client",
              "from": {
                "table": "client"
              },
              "itemsPerPage": 10,
              "getManyAndCount": true,
              "awaitResult": true,
              "assignToVar": "clientsGetRes"
            },
            {
              "type": "RETURN",
              "data": {
                "items": "{{ clientsGetRes[0] }}",
                "totalCount": "{{ clientsGetRes[1] }}",
                "pagination": {
                  "itemsPerPage": 10
                }
              },
              "config": null
            }
          ],
          "onNotMatch": []
        },
        {
          "type": "CONDITION",
          "condition": "data.filters",
          "onMatch": [
            {
              "type": "TABLE_DATA_SELECT",
              "select": "client",
              "from": {
                "table": "client"
              },
              "where": {
                "condition": "{{ filterCondition }}",
                "data": {
                  "name": ".*{{ data.filters.name || '' }}.*",
                  "email": ".*{{ data.filters.email || '' }}.*",
                  "phone": ".*{{ data.filters.phone || '' }}.*",
                  "leadStatus": ".*{{ data.filters.leadStatus || '' }}.*"
                }
              },
              "itemsPerPage": 10,
              "getManyAndCount": true,
              "awaitResult": true,
              "assignToVar": "clientsGetRes"
            },
            {
              "type": "RETURN",
              "data": {
                "items": "{{ clientsGetRes[0] }}",
                "totalCount": "{{ clientsGetRes[1] }}",
                "pagination": {
                  "itemsPerPage": 10
                }
              },
              "config": null
            }
          ],
          "onNotMatch": []
        },
        {
          "type": "CONDITION",
          "condition": "data.sorting",
          "onMatch": [
            {
              "type": "TABLE_DATA_SELECT",
              "select": "client",
              "from": {
                "table": "client"
              },
              "orderBy": {
                "client.id": "{{ data.sorting.id }}"
              },
              "itemsPerPage": 10,
              "getManyAndCount": true,
              "awaitResult": true,
              "assignToVar": "clientsGetRes"
            },
            {
              "type": "RETURN",
